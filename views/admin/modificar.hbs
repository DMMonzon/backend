<h5 style="text-align: center; margin-top:50px;">Modificar novedad</h5>
<form action="/admin/novedades/modificar" method="post">
  <div class="mb-3">
    <input type="hidden" name="id" value="{{novedad.id}}">
  </div>
  <div class="mb-3">
    <input placeholder="Título" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="titulo" value="{{novedad.titulo}}">
  </div>
  <div class="mb-3">
    <input placeholder="Subtítulo" type="text" class="form-control" id="exampleInputPassword1" name="subtitulo" value="{{novedad.subtitulo}}">
  </div>
  <div class="mb-3">
    <input placeholder="Cuerpo" type="text" class="form-control" id="exampleInputPassword1" name="cuerpo" value="{{novedad.cuerpo}}">
  </div>
  <button type="submit" class="btn btn-primary">Modificar novedad</button>
  {{#if error}}
  <h5>
    {{message}}
  </h5>
  {{/if}}
</form>
